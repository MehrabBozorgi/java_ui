<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_download"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textColor_wally"
            android:text="کیفیت تصویر مورد نظر خود را انتخاب کنید."
            android:textSize="12sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/colorAccent_wally"
            android:layout_marginTop="16dp"/>


        <RadioGroup
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textColor_wally"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textColor_wally"
                android:text="1080*720"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textColor_wally"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textColor_wally"
                android:text="1920*1080"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textColor_wally"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textColor_wally"
                android:text="1080*720"/>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_go"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="دانلود"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</RelativeLayout>